* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

body {
  font-family: Arial, Helvetica, sans-serif;
  color: white;
  background-color: black;
}

h2 {
  text-align: center;
  font-size: 2em;
  margin: 20px;
  border-bottom: white 1px solid;
}

.board {
  display: flex;
  flex-wrap: wrap;
  margin: 0px auto;

  width: 1000px;
  aspect-ratio: 1;
  box-sizing: content-box;
  border: 1px white solid;
}

.board>div {
  height: 100px;
  box-sizing: border-box;
  border: 1px solid lightgray;
  aspect-ratio: 1;
  display: flex;
  justify-content: center;
}

.fly {
  background-color: gold;
  border-color: gold;
  box-shadow: 0px 0px 3px 5px gold;
  border-radius: 50%;
  height: 25%;
  aspect-ratio: 1;
  align-self: center;
}

.food {
  background-color: red;
  box-sizing: border-box;
  height: 20%;
  aspect-ratio: 1;
  align-self: center;
}

.nest {
  background-color: green;
}